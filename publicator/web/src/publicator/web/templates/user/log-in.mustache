<form action="{{form.action}}">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text"
               class="form-control"
               id="login"
               value="{{fields.login}}">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password"
               class="form-control"
               id="password"
               value="{{fields.password}}">
    </div>

    <button type="submit" class="btn btn-primary">Log in</button>
</form>
